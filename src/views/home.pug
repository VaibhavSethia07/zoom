doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Home
        
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body
        header 
            h1 Zoom
        main
            
            div#welcome
                form#nickname 
                    input(type="text" placeholder='Enter nickname' required)
                    button Save
                    
                form#roomname
                    input(type="text" placeholder="Enter room name" required)
                    button Enter 

            div#room
                h3 
                ul
                
                form#message
                    input(type="text" placeholder='Type message' required)
                    button Send 

        script(src='/socket.io/socket.io.js')
        script(src="/public/js/app.js") 